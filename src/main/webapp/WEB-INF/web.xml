<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

  <display-name>MovieTicketApp</display-name>

  <!-- RegisterServlet -->
  <servlet>
    <servlet-name>RegisterServlet</servlet-name>
    <servlet-class>com.userManage.servlet.RegisterServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RegisterServlet</servlet-name>
    <url-pattern>/register</url-pattern>
  </servlet-mapping>

  <!-- LoginServlet -->
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.userManage.servlet.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>

  <!-- UpdateProfileServlet -->
  <servlet>
    <servlet-name>UpdateProfileServlet</servlet-name>
    <servlet-class>com.userManage.servlet.UpdateProfileServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>UpdateProfileServlet</servlet-name>
    <url-pattern>/UpdateProfileServlet</url-pattern>
  </servlet-mapping>

  <!-- ChangePasswordServlet -->
  <servlet>
    <servlet-name>ChangePasswordServlet</servlet-name>
    <servlet-class>com.userManage.servlet.ChangePasswordServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>ChangePasswordServlet</servlet-name>
    <url-pattern>/ChangePasswordServlet</url-pattern>
  </servlet-mapping>


  <!-- MoviePage -->
  <servlet>
    <servlet-name>MovieServlet</servlet-name>
    <servlet-class>com.movieManage.MovieServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>MovieServlet</servlet-name>
    <url-pattern>/movies</url-pattern>
  </servlet-mapping>


  <!--FeedbackServlet-->
  <servlet>
    <servlet-name>FeedbackServlet</servlet-name>
    <servlet-class>com.Review_and_Feedback.servlet.FeedbackServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>FeedbackServlet</servlet-name>
    <url-pattern>/feedback</url-pattern>
  </servlet-mapping>

  <!--CancelFeedbackServlet-->
  <servlet>
    <servlet-name>CancelFeedbackServlet</servlet-name>
    <servlet-class>com.Review_and_Feedback.servlet.CancelFeedbackServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CancelFeedbackServlet</servlet-name>
    <url-pattern>/deleteFeedback</url-pattern>
  </servlet-mapping>

  <!--EditFeedbackServlet-->
  <servlet>
    <servlet-name>EditFeedbackServlet</servlet-name>
    <servlet-class>com.Review_and_Feedback.servlet.EditFeedbackServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>EditFeedbackServlet</servlet-name>
    <url-pattern>/Edit</url-pattern>
  </servlet-mapping>

  <!--ReadReviewsServlet-->
  <servlet>
    <servlet-name>ReadReviewsServlet</servlet-name>
    <servlet-class>com.Review_and_Feedback.servlet.ReadReviewsServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ReadReviewsServlet</servlet-name>
    <url-pattern>/readFeedback</url-pattern>
  </servlet-mapping>


  <!--Payment and Cart -->

  <servlet>
    <servlet-name>AddToCartServlet</servlet-name>
    <servlet-class>com.CartAndPayment.servlet.AddToCartServlet</servlet-class> <!-- Update the package if different -->
  </servlet>

  <servlet-mapping>
    <servlet-name>AddToCartServlet</servlet-name>
    <url-pattern>/add-to-cart</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>UpdateCartServlet</servlet-name>
    <servlet-class>com.CartAndPayment.servlet.UpdateCartServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>UpdateCartServlet</servlet-name>
    <url-pattern>/update-cart</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ViewCartServlet</servlet-name>
    <servlet-class>com.CartAndPayment.servlet.ViewCartServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>ViewCartServlet</servlet-name>
    <url-pattern>/view-cart</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ProcessPaymentServlet</servlet-name>
    <servlet-class>com.CartAndPayment.servlet.ProcessPaymentServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>ProcessPaymentServlet</servlet-name>
    <url-pattern>/process-payment</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>AddMovieToCartServlet</servlet-name>
    <servlet-class>com.CartAndPayment.servlet.AddMovieToCartServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>AddMovieToCartServlet</servlet-name>
    <url-pattern>/add-movie-to-cart</url-pattern>
  </servlet-mapping>

</web-app>
